<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="cs246.sara.caretrackerapp.Expense">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/enterLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <EditText
            android:id="@+id/editLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/label_hint"
            android:background="@drawable/text_border"
            android:padding="8dp"
            android:inputType="text|textPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <EditText
        android:id="@+id/expenseDescription"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="@drawable/text_border"
        android:ems="10"
        android:gravity="top|start"
        android:hint="@string/descrip_hint"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textAlignment="viewStart" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_preview"
                android:layout_above="@+id/photoLayout"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/image_preview" />

            <LinearLayout
                android:id="@+id/photoLayout"
                android:layout_above="@+id/layout_ok_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_photo"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/ic_photo_camera_black_24px" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ok_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onCancelListener"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorGreen0"
                    android:background="@android:color/transparent"
                    android:text="@string/btn_cancel" />

                <Button
                    android:id="@+id/okExpense"
                    android:onClick="onOkClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorGreen0"
                    android:background="@android:color/transparent"
                    android:text="@string/btn_ok" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>